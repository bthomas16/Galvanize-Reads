<a href="/"><button type="button" name="button">Home</button></a>
{{#if authorss}}
  <a href="/galvanize_reads/library/authors/new"><button type="button" name="button">Add New Author</button></a>
{{/if}}

{{#each authorss}}
  <a href="/galvanize_reads/library/authors/{{author_id}}/{{fName}}/{{lName}}">
    <h2><span>Author:</span> {{fName}} {{lName}}</h2>
    <h4><span>Biography: </span>{{biography}}</h4>
    <h5><img src="{{portrait}}" width="150px;"></h5>
  </a>
  <h5><span>Books:</span>
    {{#each bookss}}
      <a href="/galvanize_reads/library/{{book_id}}/{{title}}">{{title}}<img src="{{coverPic}}" alt=""></a>
    {{/each}}
  </h5>
{{/each}}



{{#if bookss}}
  <a href="/galvanize_reads/library/books/new">
    <button type="button" name="button">
      Add New Book
    </button>
  </a>
{{/if}}

{{#each bookss}}
  <a href="/galvanize_reads/library/books/{{book_id}}/{{title}}">
    <h2><span>Title:</span> {{title}}</h2>
    <h4><span>Genre:</span> {{genre}}</h4>
    <h5><span>Author:</span>  </h5>
    <h5><span>Description:</span> {{description}}</h5>
    <h5><img src="{{coverPic}}" width='150px' alt=""></h5>
  </a>
{{/each}}
