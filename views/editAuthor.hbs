<form class="" action="/galvanize_reads/library/authors/{{author_id}}/{{fName}}/{{lName}}/update" method="post">
  <img src="{{portrait}}" width="120px" alt="">
  <label for="fName">First Name</label>
  <input type="text" name="fName" value="{{fName}}">
  <label for="lName">Last Name</label>
  <input type="text" name="lName" value="{{lName}}">
  <label for="">Bio</label>
  <input type="text" name="biography" value="{{biography}}">
  <label for="">portrait</label>
  <input type="text" name="portrait" value="{{portrait}}">
  <div class="authorBox"></div>
  <button type="submit" name="button">Update Author</button>
</form>
